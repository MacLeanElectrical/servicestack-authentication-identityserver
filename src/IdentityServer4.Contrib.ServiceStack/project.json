{
  "version": "4.0.0-*",
  "authors": [ "Stuart Banks" ],
  "description": "An IdentityServer plugin for ServiceStack Authentication",

  "packOptions": {
    "tags": [ "ServiceStack", "IdentityServer" ],
    "projectUrl": "https://github.com/MacLeanElectrical/servicestack-authentication-identityserver",
    "licenseUrl": "https://www.mozilla.org/en-US/MPL/2.0/",
    "iconUrl": "https://identityserver.github.io/Documentation/assets/images/icons/IDserver_icon128.jpg",
    "releaseNotes": "Initial release.",
    "requireLicenseAcceptance": false   
  },

  "dependencies": {
    "IdentityServer4": "1.0.2"
  },

  "frameworks": {
    "netstandard1.4": {
      "imports": [
        "dotnet5.6",
        "portable-net45+win8"
      ],
      "dependencies": {
        "System.Collections.Specialized": "4.3.0",
        "System.Diagnostics.Process": "4.3.0"
      }
    },
    "net452": {}
  },

  "scripts": {
    "postcompile": [
      "dotnet pack --no-build --configuration %compile:Configuration%"
    ]
  }
}
